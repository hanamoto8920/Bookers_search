<!--登録したアカウント一覧ページ-->

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!--マイページ表示部分-->
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:"60x60" %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
          <th></th>
        </tr>
      </table>
      
      <button type="button" class="btn btn-default btn-lg active" aria-label="Left Align"><%= link_to '', edit_user_path(current_user.id), class: "glyphicon glyphicon-wrench" %></button>
      
      <!--投稿部分-->
      <h1>New book</h1>
      <!-- form_with部分 -->
      <%= form_with model:@book, url: books_path, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-info active"%>
      <% end %>
    </div>
    
    <div class="col-xs-9">
     <h1>Users</h1>
      <table class="table">
        <!--登録したアカウントの一覧部分-->
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
        
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:"60x60" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id), class: "btn btn-info active" %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>









